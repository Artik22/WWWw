                        </thead>
                        <tbody>



    @foreach (var users in Model)
        {
            <tr>
                <td class="pl-4">1</td>
                <td>
                    <a href="~/Article/DocumentOutput/@users.Id">
                        <h5 class="font-medium mb-0">@users.Title</h5>
                        <span class="text-muted">Набережные Челны, Татарстан</span>
                    </a>
                </td>
                <td>
                    <span class="text-muted">Visual Designer</span><br>
                    <span class="text-muted">Past : teacher</span>
                </td>


                <td>
                    <a href="~/Article/DocumentOutput/@users.Id" class="btn btn-outline-info btn-circle btn-lg btn-circle">
                        <i class="fa fa-file-text"></i>
                    </a>
                    <a href="~/Article/DeleteArticl/@users.Id" class="btn btn-outline-info btn-circle btn-lg btn-circle ml-2">
                        <i class="fa fa-trash"></i>
                    </a>
                        <a href="~/Article/EditArticl/@users.Id" class="btn btn-outline-info btn-circle btn-lg btn-circle ml-2">
                            <i class="fa fa-edit"></i>
                        </a>


            </tr>

        }

    </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


