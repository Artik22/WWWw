    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div>
                            <h5 class="card-title text-uppercase mb-0">База знаний </h5>
                        </div>
                        <div>
                            <a asp-area="" asp-controller="Article" asp-action="CreateArticl" class="btn btn-outline-info btn-circle btn-lg btn-circle ml-2">
